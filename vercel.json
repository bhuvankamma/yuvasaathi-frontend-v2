{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/python/(.*)",
      "dest": "backend/app.py"
    },
    {
      "src": "/api/node/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "build/index.html"
    }
  ]
}