{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/python/(.*)",
      "dest": "backend/app.py"
    },
    {
      "src": "/api/node/(.*)",
      "dest": "api/index.js"
    }
  ]
}